class Solution(object):
    def carFleet(self, target, position, speed):
        """
        :type target: int
        :type position: List[int]
        :type speed: List[int]
        :rtype: int
        """
        pairs = sorted(zip(position, speed), reverse = True)
        ans = 0
        largest = 0
        for pair in pairs:
            time = float(target-pair[0]) / pair[1]
            if time > largest:
                largest = time
                ans += 1
        return ans